# ui.R - Bastian I. Hougaard
# Here we define the design and layout of our R Shiny application (Bootstrap).
shinyUI(
  fluidPage(
            titlePanel("Co2 emission for each contry in years"),
  plotlyOutput("speedPlot"),
  #sliderInput("slider","try to drag", value=c(0,10),min=0,max=10),
  #sliderInput("slider2","try to drag", value=c(1,3),min=1,max=3, step = 0.1),
  # Copy the chunk below to make a group of checkboxes
  checkboxGroupInput("checkGroup", label = h3("Checkbox group"), 
                    choices = list("Afghanistan" , "Africa", "Albania","Denmark"),
                       selected = 1),
    hr(),
    fluidRow(column(3, verbatimTextOutput("value"))),
  p("The first checkbox group controls the second"),
  checkboxInput("all", "Select All/none",value = TRUE)
  )
)
